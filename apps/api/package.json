{
  "name": "api",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts src/worker.ts --format esm --dts && node scripts/copy-migrations.cjs",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "worker": "node dist/worker.js",
    "worker:dev": "tsx watch src/worker.ts",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:clear": "tsx scripts/clear-db.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.1000.0",
    "@decentraguild/billing": "workspace:*",
    "@decentraguild/config": "workspace:*",
    "@decentraguild/contracts": "workspace:*",
    "@decentraguild/core": "workspace:*",
    "@decentraguild/display": "workspace:*",
    "@decentraguild/web3": "workspace:*",
    "@fastify/cookie": "^11.0.0",
    "@fastify/cors": "^11.0.0",
    "@fastify/rate-limit": "^10.0.0",
    "@noble/ed25519": "^3.0.0",
    "@solana/spl-token": "^0.4.9",
    "@solana/web3.js": "^1.95.0",
    "bs58": "^6.0.0",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.0",
    "jose": "^6.1.3",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.11.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  }
}